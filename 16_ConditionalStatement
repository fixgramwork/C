#include <stdio.h>

int main() {
    // 제어문: 프로그램의 실행의 흐름을 제어할때 사용
    // 조건문
    //  분기문 (분기: 프로그램의 실행흐름을 다른쪽으로보내는 것
    //   조건분기
    //    if, if-else, if-else -if, switch-case(선택문)
    //    무조건분기
    //      goto문
    // 반복문

    int inputValue = 0;
    printf("정수값을 입력하세요: ");
    scanf_s("%d", &inputValue);

    // if(조건식){
    //   실행할 명령어
    // }
    if (inputValue > 10) { // 단일조건문
        printf("inputValue: %d가 10보다크다.\n", inputValue);
    }

    // c언어에서는 정수값을 가지고 논리값을 처리합니다. 그래서 정수식도 가능합니다.
    if (!(inputValue - 10)) {
        printf("inputvalue: %d가 10과 같다.\n", inputValue);
    }

    if (inputValue > 10) { // 이중조건문
        printf("inputValue: %d가 10보다 크다. \n", inputValue);
    }
    else {
        printf("inputValue: %d가 10보다 크거나 같다.\n", inputValue);
    }



    return 0;
}
